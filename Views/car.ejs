<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ยานพาหนะ</title>
    <link rel="stylesheet" href="/css/car.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet'
        href='https://cdn-uicons.flaticon.com/2.1.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
    <link rel='stylesheet'
        href='https://cdn-uicons.flaticon.com/2.1.0/uicons-solid-straight/css/uicons-solid-straight.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('components/navbar.ejs') -%>
        <div class="container-fluid mt-3 " id="main">
            <div class="row">
                <div class="col-12 ">
                    <div class="container-fluid p-0 m-0"
                        style="display: flex;justify-content: space-between;align-items: center;">
                        <button type="button" onclick="toggleNav()" class="toggler mb-2 p-0 m-0"
                            style="font-size: 20px">
                            <i class="fi fi-rr-indent" id="toggleIcon" style="color: white"></i>
                        </button>
                        <%- include('components/userinfo.ejs') -%>
                    </div>
                    <div class="card" style="box-shadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.25);">
                        <div class="card-body">
                            <div class="row mt-2">
                                <div class="col-md">
                                    <div>
                                        <label for="">เมนู :</label>
                                        <button type="button" class="btn "
                                            style=" border-color: #FFECB3; background-color:#FFECB3; width: 100px; color: black;"
                                            data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever=""><i
                                                class="fi fi-rr-edit" style="margin-right: 6px;"></i>เพิ่ม</button>
                                        <div class="modal fade" id="exampleModal" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">เพิ่ม</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body" id="modal-body">
                                                        <form action="/setting/car/Add" method="POST">
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">ทะเบียน</label>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    <input type="text" class="form-control"
                                                                        name="register">
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">ประเภท</label>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    <input type="text" class="form-control" name="type">
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">ที่นั่ง</label>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    <input type="text" class="form-control" name="seat">
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">ปิด</button>
                                                        <button id="confirmBtn" type="button"
                                                            class="btn btn-primary">ยืนยัน</button>
                                                    </div>



                                                </div>
                                            </div>
                                        </div>
                                        <button type="button" class="btn border-0"
                                            style="background-color:#FFECB3; width: 100px;"><i
                                                class="fi fi-ss-time-past"></i>
                                            ฟื้นฟู</button>
                                    </div>
                                </div>
                                <div class="col-md search">
                                    <input class="form-control" type="text" placeholder="&#xf002; ค้นหา"
                                        style="width: 200px; border-radius: 8px ; border:1px solid black;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card mt-3" style="box-shadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.25);">
                        <table class="table table-striped table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">ผู้ดูแลระบบ</th>
                                    <th scope="col">ทะเบียน</th>
                                    <th scope="col">ประเภท</th>
                                    <th scope="col">ที่นั่ง</th>
                                    <th scope="col">พร้อมใช้งาน</th>
                                </tr>
                            </thead>
                            <% vehicles.forEach(vehicle=> { %>
                                <tr>
                                    <td>
                                        <div class="btn-group btn-group" role="group" style="width: 100px;">
                                            <a class="btn btn-warning" role="button"><i
                                                    class="fa-regular fa-pen-to-square"></i></a>
                                            <!-- href="/booking-edit/<%= vehicle._id %>"-->
                                            <button type="button" class="btn btn-danger"
                                                onclick="displayAlert('<%= vehicle._id %>')"><i
                                                    class="fa-solid fa-trash-can"></i></button>
                                        </div>

                                    </td>
                                    <td>
                                        <%= vehicle.register %>

                                    </td>
                                    <td>
                                        <%= vehicle.type %>
                                    </td>
                                    
                                    <td>
                                        <%= vehicle.seat %>
                                    </td>
                                    <td>
                                        <% if (vehicle.available) { %>
                                            พร้อมใช้งาน
                                            <% }else{ %>
                                                ไม่พร้อมใช้งาน
                                                <% } %>

                                    </td>
                                </tr>
                                <% }) %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <script>
            var exampleModal = document.getElementById('exampleModal')
            exampleModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget
                var recipient = button.getAttribute('data-bs-whatever')
                var modalTitle = exampleModal.querySelector('.modal-title')
                var modalBodyInput = exampleModal.querySelector('.modal-body input')
                modalTitle.textContent = 'New message to ' + recipient
                modalBodyInput.value = recipient
            })
        </script>
        <script>
            document.getElementById("confirmBtn").addEventListener("click", function (event) {
                event.preventDefault();
                displayAlertApprove();
            });

        </script>
        <script>
            async function displayAlertApprove() {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    iconColor: 'white',
                    customClass: {
                        popup: 'colored-toast',
                    },
                    showConfirmButton: false,
                    timer: 1000,
                    timerProgressBar: true,
                });
                const swalWithBootstrapButtons = Swal.mixin({
                    customClass: {
                        confirmButton: 'btn btn-success',
                        cancelButton: 'btn btn-danger'
                    },
                    buttonsStyling: false
                });
                const result = await swalWithBootstrapButtons.fire({
                    title: 'คุณแน่ใจหรือไม่?',
                    text: 'คุณต้องการยืนยันที่จะอนุมัติ!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'ยืนยัน',
                    cancelButtonText: 'ยกเลิก',
                    reverseButtons: true
                });

                if (result.isConfirmed) {
                    await Toast.fire({
                        icon: 'success',
                        title: 'Success',
                    })

                    await document.querySelector("#modal-body form").submit();
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    swalWithBootstrapButtons.fire({
                        title: 'ยกเลิก',
                        text: 'คุณได้ทำการยกเลิก',
                        icon: 'error'
                    });
                }
            }



        </script>
        <script src="/JS/alertDelete.js"></script>
        <script src="../JS/navbar.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>