<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>สมาชิก</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="/css/member.css">
    <link rel="stylesheet"
        href="https://cdn-uicons.flaticon.com/2.1.0/uicons-regular-rounded/css/uicons-regular-rounded.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
</head>

<body>
    <%- include('components/navbar.ejs') -%>
        <div class="container-fluid mt-3" id="main">
            <div class="row">
                <div class="col-12">
                    <div class="container-fluid p-0 m-0"
                        style="display: flex;justify-content: space-between;align-items: center;">
                        <button type="button" onclick="toggleNav()" class="toggler mb-2 p-0 m-0"
                            style="font-size: 20px">
                            <i class="fi fi-rr-indent" id="toggleIcon" style="color: white"></i>
                        </button>
                        <%- include('components/userinfo.ejs') -%>
                    </div>
                    <div class="card" style="box-shadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.25);">
                        <div class="card-body">
                            <div class="row mt-2">
                                <div class="col-md">
                                    <div>
                                        <label>เมนู :</label>
                                        <button
                                            style=" border-color: #FFECB3; background-color:#FFECB3; color: black; width: 100px; "
                                            type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#AddVehicle">
                                            <i class="fi fi-rr-edit" style="margin-right: 6px;"></i>เพิ่ม
                                        </button>
                                        <div class="modal fade" id="AddVehicle" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">เพิ่ม</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body" id="modal-body">
                                                        <form action="/setting/car/Add" method="POST">
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">ประเภท</label>
                                                                </div>
                                                                <div class="col-sm-9">
                                                                    <input type="text" class="form-control"
                                                                        name="type" required>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">รหัส</label>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    <input type="text" class="form-control" name="numberID"
                                                                        required>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">ชื่อ</label>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    <input type="text" class="form-control" name="newfirstname"
                                                                        required>
                                                                </div>
                                                            </div>
                                                            <div class="row mb-3">
                                                                <div class="col-sm-3">
                                                                    <label class="form-label">หน่วยงาน</label>
                                                                </div>
                                                                <div class="col-sm-9 text-secondary">
                                                                    <input type="text" class="form-control" name="organization"
                                                                        required>
                                                                </div>
                                                            </div>
                                                            <div class="row gy-2 text-end">
                                                                <div class="col-md">
                                                                    <button type="submit" class="btn btn-primary "
                                                                        id="AddBtn">ยืนยัน</button>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 search">
                                    <input type="text" class="form-control" placeholder="&#xf002; ค้นหา">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-3" style="box-shadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.25);">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">จัดการ</th>
                            <th scope="col">ประเภท</th>
                            <th scope="col">รหัส</th>
                            <th scope="col">ชื่อ</th>
                            <th scope="col">หน่วยงาน</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(USER=> { %>
                            <% if (USER._id!==users._id) { %>
                                <tr>
                                    <td>
                                        <div class="btn-group btn-group" role="group" style="width: 100px;">
                                            <a class="btn btn-warning" role="button" data-bs-toggle="modal"
                                                data-bs-target="#UpdateInfo_<%= USER._id%>" data-bs-whatever=""><i
                                                    class="fa-regular fa-pen-to-square"></i></a>
                                            <div class="modal fade" id="UpdateInfo_<%= USER._id%>" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">สมาชิก</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body" id="modal-body">
                                                            <form action="/setting/member/update/<%= USER._id%>"
                                                                method="POST">
                                                                <div class="row mb-3">
                                                                    <div class="col-sm-3">
                                                                        <label class="form-label">ประเภท</label>
                                                                    </div>
                                                                    <div class="col-sm-9 text-secondary">
                                                                        <select name="newrole" class="form-select">
                                                                            <option value="approver"
                                                                                <%=USER.role==='approver' ? 'selected'
                                                                                : '' %>>ผู้อนุมัติ</option>
                                                                            <option value="admin" <%=USER.role==='admin'
                                                                                ? 'selected' : '' %>
                                                                                >คนจัดรถ</option>
                                                                            <option value="user" <%=USER.role==='user'
                                                                                ? 'selected' : '' %>
                                                                                >พนักงาน</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-sm-3">
                                                                        <label class="form-label">รหัส</label>
                                                                    </div>
                                                                    <div class="col-sm-9 text-secondary">
                                                                        <input type="text" class="form-control"
                                                                            value="<%= USER.numberID %>" disabled>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-sm-3">
                                                                        <label class="form-label">ชื่อ</label>
                                                                    </div>
                                                                    <div class="col-sm-9 text-secondary">
                                                                        <input type="text" class="form-control"
                                                                            name="newfirstname"
                                                                            value="<%= USER.firstname %>" required>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-sm-3">
                                                                        <label class="form-label">นามสกุล</label>
                                                                    </div>
                                                                    <div class="col-sm-9 text-secondary">
                                                                        <input type="text" class="form-control"
                                                                            name="newlastname" value=<%=USER.lastname%>
                                                                        required>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-sm-3">
                                                                        <label class="form-label">หน่วยงาน</label>
                                                                    </div>
                                                                    <div class="col-sm-9 text-secondary">
                                                                        <input type="text" class="form-control"
                                                                            name="neworganization"
                                                                            value="<%= USER.organization %>" required>
                                                                    </div>
                                                                </div>
                                                                <div class="row mb-3">
                                                                    <div class="col-sm-3">
                                                                        <label class="form-label">รหัสผ่าน</label>
                                                                    </div>
                                                                    <div class="col-sm-9 text-secondary">
                                                                        <input type="password" class="form-control"
                                                                            name="newpassword" value="">
                                                                    </div>
                                                                </div>
                                                                <div class="row gy-2 text-center">
                                                                    <div class="col-md">
                                                                        <button class="btn btn-secondary"
                                                                            data-bs-dismiss="modal">ปิด</button>
                                                                    </div>
                                                                    <div class="col-md ">
                                                                        <button type="submit" class="btn btn-primary "
                                                                            id="AddBtn" id="txt">ยืนยัน</button>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-danger"
                                                onclick="displayAlert('<%= USER._id%>')"><i
                                                    class="fa-solid fa-trash-can"></i></button>
                                        </div>
                                    </td>
                                    <td>
                                        <%= USER.role==='approver' ? "ผู้อนุมัติ" : USER.role==='admin' ? "คนจัดรถ"
                                            : "พนักงาน" %>
                                    </td>
                                    <td>
                                        <%= USER.numberID %>
                                    </td>
                                    <td>
                                        <%= USER.firstname %>
                                            <%= USER.lastname %>
                                    </td>
                                    <td>
                                        <%= USER.organization %>
                                    </td>
                                </tr>
                                <% } %>
                                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Delete -->
        <script>
            function displayAlert(userID) {
                Swal.fire({
                    title: "คุณต้องการลบใช่หรือไม่?",
                    showDenyButton: true,
                    confirmButtonText: "ยืนยัน",
                    denyButtonText: `ยกเลิก`,
                }).then((result) => {
                    if (result.isConfirmed) {
                        deletedMember(userID);

                    } else if (result.isDenied) {
                        Swal.fire("การลบไม่เปลี่ยนแปลง", "", "info");
                    }
                });
                return false;
            }
            function deletedMember(userID) {
                fetch(`/setting/member/delete/${userID}`, {
                    method: "DELETE",
                })
                    .then((response) => {
                        if (!response.ok) {
                            throw new Error("Failed to delete vehicle");
                        }
                        window.location.reload();
                    })
                    .catch((error) => {
                        console.error("Error deleting vehicle:", error);
                    });
            }
        </script>
        <script src="../JS/navbar.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>