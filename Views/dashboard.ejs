<body>
  <%- include('components/navbar.ejs') -%>
    <div class="container-fluid mt-3 " id="main">
      <div class="row d-flex align-items-center">
        <div class="col ">
          <button type="button" onclick="toggleNav()" id="toggleNav" class="toggler mb-2 p-0 m-0"
            style="font-size: 20px; ">
            <i class="fi fi-rr-indent" id="toggleIcon" style="color: white"></i>
        </div>

        <%- include('components/userinfo.ejs') -%>

          <div class="row">
            <div class="col-md-4 " style="position: sticky;">
              <div class="card mt-2 ">
                <div class="tt">
                  <div class="card-body text-center  " style="background-color:#FFECB3;">
                    <i class="fi fi-br-calendar-clock" style="font-size: 1.5em;"></i>
                    <p style="font-size: 1rem;">1</p>
                    <p style="font-size: 1rem;">ยานพาหนะที่กำลังดำเนินการ</p>
                  </div>
                </div>
              </div>


              <div class="card mt-5">
                <div class="card-body text-center " style="background-color:#FFECB3;">
                  <i class="fi fi-bs-car" style="font-size: 1.5em;"></i>
                  <p style="font-size: 1rem;">23</p>
                  <p style="font-size: 1rem;">ยานพหนะ</p>
                </div>
              </div>
              <div class="card mt-5">
                <div class="card-body text-center" style="background-color:#FFECB3;">
                  <i class="fi fi-sr-file-edit" style="font-size: 1.5em;"></i>
                  <p style="font-size: 1rem;">
                    <%= bookingCount %>
                  </p>
                  <p style="font-size: 1rem;">จำนวนการจองทั้งหมด</p>
                </div>


              </div>
            </div>
            <div class="col-8">
              <div class="card mt-2">
                <div class="card-body">
                  <select class="form-select" id="inputGroupSelect01">
                    <option selected></option>
                    <option value="1">ทะเบียน</option>
                  </select>
                  <button type="button" class=" btn  mt-2 border-0 align-items-center"
                    style="width: 100%; background-color: #FFECB3;">
                    <i class="fi fi-bs-search"></i>
                    ค้นหา
                  </button>
                </div>
              </div>
              <div class="card mt-2">
                <div class="card-body">
                  <div id='calendar-container'>
                    <div id='calendar'></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>

    <script src="../JS/calendar.js"></script>
    <script src="../JS/navbar.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
